{
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "@hono/hono/jsx"
  },
  "permissions": { "default": { "read": ["public/"] } },
  "lock": { "frozen": true },
  "tasks": {
    "start": "deno serve -P src/server.tsx",
    "dev": "deno serve -P --watch src/server.tsx",
    "test": "deno test -P --parallel --doc --shuffle",
    "test:cov": "deno task test --coverage --junit-path='junit.xml'"
  },
  "imports": {
    "@hono/hono": "jsr:@hono/hono@4.10.4",
    "@std/assert": "jsr:@std/assert@1.0.15",
    "@std/http": "jsr:@std/http@1.0.21"
  },
  "deploy": {
    "project": "appearance-mode",
    "include": ["deno.json", "deno.lock", "src/", "public/"],
    "exclude": ["**/*.test.ts"],
    "entrypoint": "./src/server.tsx"
  }
}
